<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :home_team_id %>
    <%= form.select :home_team_id, Team.all.collect { |x| [x.name, x.id] }, { include_blank: 'Home Team' } %>
  </div>

  <div class="field">
    <%= form.label :away_team_id %>
    <%= form.select :away_team_id, Team.all.collect { |x| [x.name, x.id] }, { include_blank: 'Away Team' } %>
  </div>

  <div class="field">
    <%= form.label :winning_team_id %>
    <%= form.select :winning_team_id, Team.all.collect { |x| [x.name, x.id] }, { include_blank: 'Who Won?' } %>
  </div>

  <div class="field">
    <%= form.label :losing_team_id %>
    <%= form.select :losing_team_id, Team.all.collect { |x| [x.name, x.id] }, { include_blank: 'Who Lost?' } %>
  </div>

  <div class="field">
    <%= form.label :winning_score %>
    <%= form.number_field :winning_score %>
  </div>

  <div class="field">
    <%= form.label :losing_score %>
    <%= form.number_field :losing_score %>
  </div>

  <div class="field">
    <%= form.label :week %>
    <%= form.number_field :week %>
  </div>

  <div class="field">
    <%= form.label :year %>
    <%= form.number_field :year %>
  </div>

  <div class="field">
    <%= form.label :draw %>
    <%= form.check_box :draw %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
